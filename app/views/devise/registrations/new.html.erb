<div class="container mb-5" id="container-margin">
  <div class="form-block new-account-form">
    <h2>Inscription</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" }%>
        <%= f.input :first_name,
                    required: true,
                    autofocus: true,
                    label: "Prénom"
        %>
        <%= f.input :last_name,
                    required: true,
                    autofocus: true,
                    label: "Nom"
        %>
        <%= f.input :photo,
                    as: :file,
                    required: true %>
        <%= f.input :location,
                    required: true,
                    autofocus: true,
                    label: "Ville"
        %>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" },
                    label: "Mot de passe" %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password" },
                    label: "Confirmez votre mot de passe" %>
      </div>
      <div class="container buttoncenter">
        <%= f.button :submit, "S'inscrire", class: "btn-mls-forms button-form-final" %>
      </div>
    <% end %>

  </div>
</div>
