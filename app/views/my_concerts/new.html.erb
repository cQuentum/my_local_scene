<div class="background-image-form" >
<div class="form-block">
  <h2><b><%= @user.band.name %></b> en concert</h2>
  <%= simple_form_for @concert, :url => my_concerts_path do |f| %>

    <%= f.input :title, label: "Titre", :input_html => { :value => @user.band.name } %>
    <div class="form-description-tall">
    <%= f.input :description %>
    </div>
    <div class="form-address">
    <%= f.input :address, label: "Addresse du lieu", id: "address-input" %>
    </div>
    <div class="form-inline-mls">
    <%= f.input :external_link, label: "Lien de l'évènement (facebook, etc.)", input_html: { id: 'form-external-link', :value => @user.band.external_link }%>
    <%= f.input :price_cents, label: "Prix €", input_html: { id: 'form-price', :value => 0 }%>
    </div>
    <div class="form-inline-mls" id="fixed-height-mls">
    <%= f.input :start_time, as: :string, required: true, input_html: { class: 'datepicker', id: 'start-date' }, label: "Date et Heure du concert" %>


    <div class="form-inline-mls">
      <label for="photo-input" class= "upload-photo">
        <p id="label-add-image">Affiche du concert</p>
        <%= image_tag "Preview-icon.png", width: 100, id: "photo-preview"%>
      </label>
      <%= f.input :photo, input_html: { class: 'hidden',id: 'photo-input', onchange: "readURL(this);", type: 'file'}, label: false %>
    </div>
    </div>



    <%#= f.input :confirmed, as: :check_boxes, label: "Publier" %>
    <div class="container buttoncenter">
      <%= f.button :submit, "En scène !", class: "btn-mls-forms button-form-final", id: "button-style" %>
    </div>
  <% end %>
</div>
</div>

